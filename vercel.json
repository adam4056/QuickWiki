{
  "version": 2,
  "builds": [
    {
      "src": "api/summarize.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/summarize",
      "dest": "/api/summarize.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
} 